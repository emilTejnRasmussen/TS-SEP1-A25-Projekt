<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity"
      minHeight="-Infinity" minWidth="-Infinity"
      prefHeight="600.0" prefWidth="660.0"
      spacing="20.0"
      xmlns="http://javafx.com/javafx/25"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="kloeverly.presentation.controllers.resident.UpdateResidentController">

    <padding>
        <Insets bottom="20.0" left="50.0" right="50.0" top="20.0"/>
    </padding>

    <!-- Titel -->
    <Label text="Rediger beboer">
        <font>
            <Font size="36.0"/>
        </font>
    </Label>

    <!-- Form-indhold -->
    <VBox prefHeight="396.0" prefWidth="560.0" spacing="10.0">

        <GridPane hgap="10" vgap="10">
            <Label text="ID:"
                   GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <Label fx:id="idLabel"
                   GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Navn:"
                   GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="nameField"
                       promptText="Navn på beboer"
                       GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Pointfaktor:"
                   GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="pointFactorField"
                       promptText="Fx 1.0, 1.5, 2.0 ..."
                       GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="Point (kun visning):"
                   GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <Label fx:id="pointsLabel"
                   GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        </GridPane>

        <Label fx:id="errorLabel" style="-fx-text-fill: red;"/>
    </VBox>

    <!-- Knapper – 1:1 fra UpdateViewTemplate -->
    <HBox alignment="CENTER" spacing="75.0">
        <Button mnemonicParsing="false"
                onAction="#handleUpdate"
                prefHeight="45.0" prefWidth="85.0"
                text="Opdater">
            <font>
                <Font name="Segue UI" size="14.0"/>
            </font>
        </Button>
        <Button mnemonicParsing="false"
                onAction="#handleCancel"
                prefHeight="45.0" prefWidth="85.0"
                text="Afbryd">
            <font>
                <Font name="Segue UI" size="14.0"/>
            </font>
        </Button>
    </HBox>
</VBox>
