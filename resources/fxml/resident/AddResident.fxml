<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="660.0" spacing="20.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="kloeverly.presentation.controllers.resident.AddResidentController">

    <padding>
        <Insets bottom="20.0" left="50.0" right="50.0" top="20.0" />
    </padding>

    <Label text="Tilføj beboer">
        <font>
            <Font size="36.0" />
        </font>
    </Label>

    <VBox spacing="20.0">

        <HBox spacing="20.0">

            <VBox spacing="10.0">
                <HBox spacing="10.0">
                    <Label text="Navn">
                        <font>
                            <Font name="Segoe UI" size="14.0" />
                        </font>
                    </Label>

                    <Region HBox.hgrow="ALWAYS" />

                    <Label fx:id="nameErrorLabel" textFill="#ff2e2e" />
                </HBox>

                <TextField fx:id="nameTxtField" onKeyReleased="#handleInputChanged" prefHeight="25.0" prefWidth="420.0" promptText="Navn på beboer">
                    <font>
                        <Font name="Segoe UI" size="14.0" />
                    </font>
                </TextField>

            </VBox>

            <VBox spacing="10.0">
                <HBox spacing="10.0">
                    <Label text="Pointfaktor">
                        <font>
                            <Font name="Segoe UI" size="14.0" />
                        </font>
                    </Label>

                    <Region HBox.hgrow="ALWAYS" />

                    <Label fx:id="pointFactorErrorLabel" textFill="#ff2e2e" />
                </HBox>

                <TextField fx:id="pointFactorTxtField" onKeyReleased="#handleInputChanged" prefHeight="25.0" prefWidth="240.0" promptText="Indtast pointfaktor">
                    <font>
                        <Font name="Segoe UI" size="14.0" />
                    </font>
                </TextField>

            </VBox>

        </HBox>

    </VBox>

    <HBox alignment="CENTER" spacing="75.0">
        <children>

            <Button fx:id="addButton" mnemonicParsing="false" onAction="#handleAdd" prefHeight="45.0" prefWidth="85.0" text="Tilføj">
                <font>
                    <Font name="Segoe UI" size="14.0" />
                </font>
            </Button>

            <Button mnemonicParsing="false" onAction="#handleCancel" prefHeight="45.0" prefWidth="85.0" text="Afbryd">
                <font>
                    <Font name="Segoe UI" size="14.0" />
                </font>
            </Button>

        </children>
    </HBox>

</VBox>
