<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/25"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="kloeverly.presentation.controllers.resident.AddResidentController"
      prefHeight="600.0" prefWidth="660.0" spacing="40.0">

    <padding>
        <Insets top="40.0" right="80.0" bottom="40.0" left="80.0"/>
    </padding>

    <!-- TITLE (som i template) -->
    <Label text="Opret beboer">
        <font>
            <Font size="36.0"/>
        </font>
    </Label>

    <!-- Denne VBox svarer til "Fyld denne VBox med Form elementer" i templaten -->
    <VBox spacing="20.0">

        <!-- Navn -->
        <VBox spacing="5.0">
            <Label text="Navn"/>
            <TextField fx:id="nameField" promptText="Indtast beboerens navn"/>
        </VBox>

        <!-- Pointfaktor -->
        <VBox spacing="5.0">
            <Label text="Pointfaktor (1.0 - 2.0)"/>
            <TextField fx:id="pointFactorField" promptText="Indtast pointfaktor"/>
        </VBox>

    </VBox>

    <!-- Knapper nederst, præcis som i AddViewTemplate (Tilføj / Afbryd) -->
    <HBox spacing="80.0" alignment="CENTER">
        <Button text="Tilføj"
                onAction="#handleAdd"/>
        <Button text="Afbryd"
                onAction="#handleCancel"/>
    </HBox>

</VBox>
