<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="660.0" spacing="20.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="kloeverly.presentation.controllers.resident.ViewAllResidentsController">

    <padding>
        <Insets bottom="20.0" left="50.0" right="50.0" top="20.0" />
    </padding>

    <!-- Titel -->
    <Label text="Beboere">
        <font>
            <Font size="36.0" />
        </font>
    </Label>

    <!-- Søg + tabel -->
    <VBox spacing="20.0">
        <HBox spacing="20.0">
            <TextField fx:id="searchTxtField" maxWidth="1.7976931348623157E308" onKeyTyped="#handleSearch" prefHeight="30.0" prefWidth="466.0" promptText="Søg efter beboer" />
            <Button mnemonicParsing="false" onAction="#handleClearSearchBar" prefHeight="30.0" prefWidth="75.0" text="Søg">
                <font>
                    <Font size="14.0" />
                </font>
            </Button>
        </HBox>

        <TableView fx:id="residentTableView" prefHeight="335.0" prefWidth="560.0">
            <columns>
                <TableColumn fx:id="idColumn" prefWidth="80.0" text="ID" />
                <TableColumn fx:id="nameColumn" prefWidth="150.0" text="Navn" />
                <TableColumn fx:id="pointFactorColumn" prefWidth="150.0" text="Pointfaktor" />
                <TableColumn fx:id="pointsColumn"
                             prefWidth="100.0"
                             text="Point" />

            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </VBox>

    <!-- Knapper nederst – præcis som i ListViewTemplate -->
    <HBox alignment="CENTER" spacing="75.0">
        <Button mnemonicParsing="false" onAction="#handleAdd" prefHeight="45.0" prefWidth="85.0" text="Tilføj" />

        <Button mnemonicParsing="false" onAction="#handleViewDetails" prefHeight="45.0" prefWidth="85.0" text="Detaljer" />

        <Button mnemonicParsing="false" onAction="#handleUpdate" prefHeight="45.0" prefWidth="85.0" text="Opdater" />

        <Button mnemonicParsing="false" onAction="#handleDelete" prefHeight="45.0" prefWidth="85.0" text="Slet" />
    </HBox>
</VBox>
