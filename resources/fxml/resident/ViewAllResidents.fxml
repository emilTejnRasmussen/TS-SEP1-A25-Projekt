<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/25"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="kloeverly.presentation.controllers.resident.ViewAllResidentsController"
      prefHeight="600.0" prefWidth="660.0"
      spacing="20.0">

    <padding>
        <Insets bottom="20.0" left="50.0" right="50.0" top="20.0"/>
    </padding>

    <!-- Titel -->
    <Label text="Beboere">
        <font>
            <Font size="36.0"/>
        </font>
    </Label>

    <!-- Søgning + nulstil -->
    <VBox spacing="20.0">
        <HBox spacing="20.0">
            <TextField fx:id="searchTxtField"
                       prefHeight="30.0" prefWidth="466.0"
                       maxWidth="1.7976931348623157E308"
                       promptText="Søg"
                       onKeyTyped="#handleSearch"/>

            <Button text="Nulstil"
                    prefHeight="30.0" prefWidth="75.0"
                    onAction="#handleClearSearchBar">
                <font>
                    <Font size="14.0"/>
                </font>
            </Button>
        </HBox>

        <!-- Tabel med beboere -->
        <TableView fx:id="residentsTable"
                   prefHeight="335.0" prefWidth="560.0">
            <columns>
                <TableColumn fx:id="idCol"        text="ID"           prefWidth="60.0"/>
                <TableColumn fx:id="nameCol"      text="Navn"         prefWidth="200.0"/>
                <TableColumn fx:id="factorCol"    text="Pointfaktor"  prefWidth="150.0"/>
                <TableColumn fx:id="pointsCol"    text="Point"        prefWidth="150.0"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
    </VBox>

    <!-- Knapper nederst -->
    <HBox alignment="CENTER" spacing="75.0">
        <Button text="Tilføj"
                onAction="#handleAdd"
                prefHeight="45.0" prefWidth="85.0">
            <font>
                <Font size="14.0"/>
            </font>
        </Button>

        <Button text="Opdater"
                onAction="#handleUpdate"
                prefHeight="45.0" prefWidth="85.0">
            <font>
                <Font size="14.0"/>
            </font>
        </Button>

        <Button text="Slet"
                onAction="#handleDelete"
                prefHeight="45.0" prefWidth="85.0">
            <font>
                <Font size="14.0"/>
            </font>
        </Button>
    </HBox>

</VBox>
