<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox maxHeight="-Infinity"
      maxWidth="-Infinity"
      minHeight="-Infinity"
      minWidth="-Infinity"
      prefHeight="600.0"
      prefWidth="660.0"
      spacing="20.0"
      xmlns="http://javafx.com/javafx/25"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="kloeverly.presentation.controllers.resident.ViewAllResidentsController">

    <padding>
        <Insets top="20.0" right="50.0" bottom="20.0" left="50.0"/>
    </padding>

    <Label text="Beboere">
        <font>
            <Font size="36.0"/>
        </font>
    </Label>

    <VBox spacing="20.0">

        <HBox spacing="20.0">
            <TextField fx:id="searchTxtField"
                       prefWidth="466.0"
                       prefHeight="30.0"
                       promptText="Søg efter beboer"
                       onKeyTyped="#handleSearch"/>

            <Button text="Søg"
                    prefWidth="75.0"
                    prefHeight="30.0"
                    onAction="#handleClearSearchBar">
                <font>
                    <Font size="14.0"/>
                </font>
            </Button>
        </HBox>

        <TableView fx:id="allResidentsTable"
                   prefWidth="560.0"
                   prefHeight="335.0">

            <columns>
                <TableColumn fx:id="idCol" prefWidth="80.0" text="ID"/>
                <TableColumn fx:id="nameCol" prefWidth="200.0" text="Navn"/>
                <TableColumn fx:id="pointFactorCol" prefWidth="140.0" text="Pointfaktor"/>
                <TableColumn fx:id="pointsCol" prefWidth="140.0" text="Point"/>
            </columns>

            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>

        </TableView>

    </VBox>

    <HBox alignment="CENTER" spacing="75.0">

        <Button fx:id="addBtn"
                text="Tilføj"
                prefWidth="85.0"
                prefHeight="45.0"
                onAction="#handleAdd">
            <font>
                <Font size="14.0"/>
            </font>
        </Button>

        <Button fx:id="detailsBtn"
                text="Detaljer"
                prefWidth="85.0"
                prefHeight="45.0"
                onAction="#handleViewDetails">
            <font>
                <Font size="14.0"/>
            </font>
        </Button>

        <Button fx:id="updateBtn"
                text="Opdater"
                prefWidth="85.0"
                prefHeight="45.0"
                onAction="#handleUpdate">
            <font>
                <Font size="14.0"/>
            </font>
        </Button>

        <Button fx:id="deleteBtn"
                text="Slet"
                prefWidth="85.0"
                prefHeight="45.0"
                onAction="#handleDelete">
            <font>
                <Font size="14.0"/>
            </font>
        </Button>

    </HBox>

</VBox>
