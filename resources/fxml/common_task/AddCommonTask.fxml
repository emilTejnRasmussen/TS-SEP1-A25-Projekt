<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="kloeverly.presentation.controllers.green_task.RegisterGreenTaskController"
            prefHeight="600.0" prefWidth="900.0">

    <!-- TOP: Overskrift og forklaring -->
    <top>
        <VBox spacing="10.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="20.0" right="20.0" bottom="10.0" left="20.0"/>
            </padding>

            <Label text="Registrer gennemført grøn opgave"
                   style="-fx-font-size: 32px; -fx-font-weight: bold;"/>

            <Label text="Vælg en grøn opgave i listen herunder og klik 'Bekræft registrering'."
                   style="-fx-font-size: 14px;"/>
        </VBox>
    </top>

    <!-- CENTER: Liste over grønne opgaver + visning af fællespulje -->
    <center>
        <VBox spacing="10.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="10.0" right="20.0" bottom="10.0" left="20.0"/>
            </padding>

            <TableView fx:id="greenTaskTable" prefHeight="400.0" prefWidth="860.0">
                <columns>
                    <TableColumn fx:id="idColumn" text="ID" prefWidth="60.0"/>
                    <TableColumn fx:id="nameColumn" text="Titel" prefWidth="200.0"/>
                    <TableColumn fx:id="descriptionColumn" text="Beskrivelse" prefWidth="400.0"/>
                    <TableColumn fx:id="valueColumn" text="Værdi (fælles point)" prefWidth="200.0"/>
                </columns>
            </TableView>

            <HBox spacing="10.0" alignment="CENTER_LEFT">
                <Label text="Fællespulje:" style="-fx-font-weight: bold;"/>
                <Label fx:id="poolValueLabel" text="0 point"/>
            </HBox>
        </VBox>
    </center>

    <!-- BOTTOM: Knapper + status besked -->
    <bottom>
        <VBox spacing="10.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="10.0" right="20.0" bottom="20.0" left="20.0"/>
            </padding>

            <HBox spacing="10.0" alignment="CENTER_RIGHT">
                <Button fx:id="confirmButton"
                        text="Bekræft registrering"
                        prefWidth="180.0"
                        onAction="#handleConfirm"/>

                <Button text="Tilbage"
                        prefWidth="100.0"
                        onAction="#handleCancel"/>
            </HBox>

            <Label fx:id="statusLabel"
                   text=""
                   textFill="red"
                   wrapText="true"/>
        </VBox>
    </bottom>

</BorderPane>
