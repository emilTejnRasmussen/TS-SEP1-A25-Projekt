<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/25"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="kloeverly.presentation.controllers.green_task.CreateGreenTaskController"
      prefHeight="600.0" prefWidth="660.0"
      spacing="20.0">

    <padding>
        <Insets top="20.0" right="50.0" bottom="20.0" left="50.0"/>
    </padding>

    <!-- Overskrift -->
    <Label text="Opret ny grøn opgave">
        <font>
            <Font size="36.0"/>
        </font>
    </Label>

    <!-- Titel + værdi i en vandret boks -->
    <HBox spacing="20.0">
        <VBox spacing="5.0">
            <Label text="Titel"/>
            <TextField fx:id="nameTextField"
                       promptText="Navn på grøn opgave"/>
        </VBox>

        <VBox spacing="5.0">
            <Label text="Værdi (fælles point)"/>
            <TextField fx:id="valueTextField"
                       promptText="Indtast værdi"/>
        </VBox>
    </HBox>

    <!-- Beskrivelse -->
    <VBox spacing="5.0">
        <Label text="Beskrivelse"/>
        <TextArea fx:id="descriptionTextArea"
                  promptText="Indtast beskrivelse af grøn opgave"
                  prefRowCount="8"/>
    </VBox>

    <!-- Statusbesked -->
    <Label fx:id="statusLabel"
           textFill="red"
           wrapText="true"/>

    <!-- Knapper nederst -->
    <HBox alignment="CENTER" spacing="75.0">
        <Button text="Opret"
                prefHeight="45.0" prefWidth="85.0"
                onAction="#handleCreate"/>

        <Button text="Afbryd"
                prefHeight="45.0" prefWidth="85.0"
                onAction="#handleCancel"/>
    </HBox>

</VBox>
