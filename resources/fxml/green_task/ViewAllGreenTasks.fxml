    <padding>
        <Insets bottom="20.0" left="50.0" right="50.0" top="20.0" />
    </padding>

    <Label text="Grønne Opgaver">
        <font>
            <Font size="36.0" />
        </font>
    </Label>

    <VBox spacing="20.0">
        <HBox spacing="20.0">
            <TextField fx:id="searchTxtField" maxWidth="1.7976931348623157E308" onKeyTyped="#handleSearch" prefHeight="30.0" prefWidth="466.0" promptText="Søg efter opgavens navn, beskrivelse eller udbyder af opgaven" />
            <Button mnemonicParsing="false" onAction="#handleClearSearchBar" prefHeight="30.0" prefWidth="75.0" text="Søg">
                <font>
                    <Font size="14.0" />
                </font>
            </Button>
        </HBox>

        <TableView fx:id="greenTaskTable" prefHeight="335.0" prefWidth="560.0">
            <columns>
                <TableColumn fx:id="nameColumn" prefWidth="200.0" text="Navn" />
                <TableColumn fx:id="descriptionColumn" prefWidth="250.0" text="Beskrivelse" />
                <TableColumn fx:id="pointsColumn" prefWidth="110.0" text="Pointværdi" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </VBox>

    <HBox alignment="CENTER" spacing="34.0">
        <Button fx:id="addButton" mnemonicParsing="false" onAction="#handleAdd" prefHeight="45.0" prefWidth="85.0" text="Tilføj">
            <font>
                <Font name="Segoe UI" size="14.0" />
            </font>
        </Button>
        <Button fx:id="viewDetailsButton" mnemonicParsing="false" onAction="#handleViewDetails" prefHeight="45.0" prefWidth="85.0" text="Detaljer">
            <font>
                <Font name="Segoe UI" size="14.0" />
            </font>
        </Button>
        <Button fx:id="registerButton" mnemonicParsing="false" onAction="#handleRegister" prefHeight="45.0" prefWidth="85.0" text="Registrer">
            <font>
                <Font name="Segoe UI" size="14.0" />
            </font>
        </Button>
        <Button fx:id="updateButton" mnemonicParsing="false" onAction="#handleUpdate" prefHeight="45.0" prefWidth="85.0" text="Opdater">
            <font>
                <Font name="Segoe UI" size="14.0" />
            </font>
        </Button>
        <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#handleDelete" prefHeight="45.0" prefWidth="85.0" text="Slet">
            <font>
                <Font name="Segoe UI" size="14.0" />
            </font>
        </Button>
