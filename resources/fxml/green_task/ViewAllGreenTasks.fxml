<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity"
      minHeight="-Infinity" minWidth="-Infinity"
      prefHeight="600.0" prefWidth="660.0"
      spacing="20.0"
      xmlns="http://javafx.com/javafx/25"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="kloeverly.presentation.controllers.green_task.ViewAllGreenTasksController">

    <padding>
        <Insets bottom="20.0" left="50.0" right="50.0" top="20.0"/>
    </padding>


    <Label text="Grønne opgaver">
        <font>
            <Font size="36.0"/>
        </font>
    </Label>


    <HBox spacing="10.0">
        <TextField fx:id="searchField"
                   promptText="Søg efter grøn opgave..."
                   onKeyReleased="#handleSearch"/>
        <Button text="Søg"
                onAction="#handleClearSearch"/>
    </HBox>


    <TableView fx:id="greenTaskTable" prefHeight="400.0">
        <columns>
            <TableColumn fx:id="nameColumn"
                         text="Navn" prefWidth="180.0"/>
            <TableColumn fx:id="descriptionColumn"
                         text="Beskrivelse" prefWidth="320.0"/>
            <TableColumn fx:id="pointsColumn"
                         text="Point" prefWidth="60.0"/>
        </columns>
    </TableView>


    <HBox alignment="CENTER_RIGHT" spacing="10.0">

        <Button text="Tilføj"
                prefWidth="90.0" prefHeight="35.0"
                onAction="#handleAddGreenTask"/>

        <Button text="Detaljer"
                prefWidth="90.0" prefHeight="35.0"
                onAction="#handleViewGreenTask"/>

        <Button text="Opdater"
                prefWidth="90.0" prefHeight="35.0"
                onAction="#handleUpdateGreenTask"/>

        <Button text="Slet"
                prefWidth="90.0" prefHeight="35.0"
                onAction="#handleDeleteGreenTask"/>
    </HBox>

</VBox>
