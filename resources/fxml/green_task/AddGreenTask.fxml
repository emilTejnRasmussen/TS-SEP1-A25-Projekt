<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity"
      minHeight="-Infinity" minWidth="-Infinity"
      prefHeight="600.0" prefWidth="660.0"
      spacing="20.0"
      xmlns="http://javafx.com/javafx/25"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="kloeverly.presentation.controllers.green_task.AddGreenTaskController">

    <padding>
        <Insets bottom="20.0" left="50.0" right="50.0" top="20.0"/>
    </padding>

    <!-- Titel -->
    <Label text="Tilføj grøn opgave">
        <font>
            <Font size="36.0"/>
        </font>
    </Label>

    <!-- Form-område -->
    <VBox prefHeight="396.0" prefWidth="560.0" spacing="10.0">

        <GridPane hgap="10.0" vgap="10.0"><!-- Navn -->
            <Label text="Navn:"
                   GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="nameField"
                       promptText="Navn på grøn opgave"
                       GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <!-- Beskrivelse -->
            <Label text="Beskrivelse:"
                   GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="descriptionField"
                       promptText="Kort beskrivelse"
                       GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <!-- Point -->
            <Label text="Point:"
                   GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="pointsField"
                       promptText="Fx 10"
                       GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        </GridPane>

        <!-- Fejlbesked -->
        <Label fx:id="errorLabel" style="-fx-text-fill: red;"/>
    </VBox>

    <!-- Knapper (fra AddViewTemplate) -->
    <HBox alignment="CENTER" spacing="75.0">
        <Button mnemonicParsing="false"
                onAction="#handleAdd"
                prefHeight="45.0" prefWidth="85.0"
                text="Tilføj">
            <font>
                <Font name="Segue UI" size="14.0"/>
            </font>
        </Button>
        <Button mnemonicParsing="false"
                onAction="#handleCancel"
                prefHeight="45.0" prefWidth="85.0"
                text="Afbryd">
            <font>
                <Font name="Segue UI" size="14.0"/>
            </font>
        </Button>
    </HBox>
</VBox>
